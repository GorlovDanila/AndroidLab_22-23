<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidLab_2223" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color_dark</item>
        <item name="colorSecondary">@color/secondary_color_dark</item>
        <item name="colorBackgroundFloating">@color/background_color_dark</item>
        <item name="colorSurface">@color/surface_color_dark</item>
        <item name="colorError">@color/error_color_dark</item>
        <item name="colorOnPrimary">@color/on_primary_color_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_color_dark</item>
        <item name="colorOnBackground">@color/on_background_color_dark</item>
        <item name="colorOnSurface">@color/on_surface_color_dark</item>
        <item name="colorOnError">@color/on_error_color_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="ButtonMain">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="cornerRadius">50dp</item>
        <item name="strokeWidth">5dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:windowBackground">@color/primary_color_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="UbuntuTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>