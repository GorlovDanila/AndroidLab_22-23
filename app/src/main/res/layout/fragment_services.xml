<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/profile_fragment"
        app:layout_constraintBottom_toTopOf="@id/btn_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_friends"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/friends_fragment"
        app:layout_constraintBottom_toTopOf="@id/btn_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_profile" />

    <Button
        android:id="@+id/btn_music"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/music_fragment"
        app:layout_constraintBottom_toTopOf="@id/btn_shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_friends" />

    <Button
        android:id="@+id/btn_shop"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/shop_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_music" />

</androidx.constraintlayout.widget.ConstraintLayout>